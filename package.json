{
  "name": "telegram-designer-mini-app",
  "version": "1.0.0",
  "description": "A Telegram Mini-App and Bot system for graphic designers.",
  "main": "index.js",
  "scripts": {
    "dev:backend": "npm --workspace=backend run dev",
    "dev:bot": "npm --workspace=bot run dev",
    "dev:frontend": "npm --workspace=frontend run dev",
    "dev": "npm-run-all --parallel dev:*",
    "build:backend": "npm --workspace=backend run build",
    "build:bot": "npm --workspace=bot run build",
    "build:frontend": "npm --workspace=frontend run build",
    "build": "npm-run-all build:*",
    "test:backend": "npm --workspace=backend test",
    "test:bot": "npm --workspace=bot test",
    "test:frontend": "npm --workspace=frontend test",
    "test": "npm-run-all --parallel test:*",
    "start:backend": "npm --workspace=backend run start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "backend",
    "frontend",
    "bot"
  ],
  "devDependencies": {
    "lerna": "^7.4.2",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
